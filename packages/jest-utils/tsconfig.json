{
    "extends": "../tsconfig/tsconfig.json",
    "compilerOptions": {
        "baseUrl": "./",
        "target": "es5",
        "outDir": "./lib",
        "declaration": true,
        "module": "commonjs",
        "types": ["node", "jest"],
        "lib": ["es2015", "es2017", "es2018", "dom"],
