{
    "extends": "../tsconfig/tsconfig.json",
    "compilerOptions": {
        "baseUrl": "./",
        "target": "es5",
        "outDir": "./lib",
        "declaration": true,
        "module": "commonjs",
        "types": ["node", "jest"],
        "lib": ["es2015", "es2017", "es2018", "dom"],
        "typeRoots": ["../../node_modules/@types", "./"],
        "paths": {
            "@mock/*": ["__tests__/helpers/*"]
        }
    },
    "include": ["./src"],
    "exclude": ["__tests__"],
    "files": ["./src/index.ts"]
}
