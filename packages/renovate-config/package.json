{
    "name": "@angular-ru/renovate-config",
    "version": "15.304.0",
    "description": "Shared Renovate config for Angular projects",
    "keywords": [
        "angular-ru",
        "angular",
        "sdk",
        "renovate",
        "renovate-config"
    ],
    "homepage": "https://github.com/Angular-RU/angular-ru-sdk/tree/master/packages/renovate-config#readme",
    "bugs": {
        "url": "https://github.com/Angular-RU/angular-ru-sdk/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Angular-RU/angular-ru-sdk.git"
    },
    "license": "MIT",
    "author": "angular-ru@yandex.ru",
    "publishConfig": {
        "access": "public"
    },
    "renovate-config": {
        "default": {
            "enabled": true,
            "automerge": false,
            "pinVersions": true,
            "rangeStrategy": "bump",
            "timezone": "Europe/Moscow",
            "masterIssueApproval": false,
            "separateMajorMinor": true,
            "separateMinorPatch": false,
            "semanticCommits": true,
            "dependencyDashboard": false,
            "dependencyDashboardApproval": false,
            "semanticPrefix": "build",
            "prHourlyLimit": 2,
            "labels": [
                "comp: build & ci",
                "action: review"
            ],
            "baseBranches": [
                "master"
            ],
            "packageFiles": [
                "package.json",
                "packages/**/package.json"
            ],
            "packageRules": [
                {
                    "depTypeList": [
                        "peerDependencies"
                    ],
                    "enabled": false
                },
                {
                    "packagePatterns": [
                        "^rxjs.*"
                    ],
                    "groupName": "RxJS"
                },
                {
                    "packagePatterns": [
                        "^prettier$"
                    ],
                    "groupName": "Prettier"
                },
                {
                    "packagePatterns": [
                        "^@angular/.*",
                        "^@angular-ru/.*",
                        "^@angular-devkit/.*",
                        "^@schematics/.*",
                        "^@angular/cdk$",
                        "^@angular/cli$",
                        "^@angular/cdk-experimental$",
                        "^@angular/flex-layout$",
                        "^@angular/material$",
                        "^@angular-builders/.*",
                        "^ng-packagr$"
                    ],
                    "groupName": "Angular",
                    "postUpgradeTasks": {
                        "commands": [
                            "ng update {{{depName}}} --from={{{fromVersion}}} --to={{{toVersion}}} --migrateOnly --allowDirty --force"
                        ],
                        "fileFilters": [
                            "**/**"
                        ]
                    }
                },
                {
                    "packagePatterns": [
                        "^class-transformer$"
                    ],
                    "groupName": "class-transformer"
                },
                {
                    "packagePatterns": [
                        "^@ngxs/.*",
                        "^@ngxs-labs/.*"
                    ],
                    "groupName": "NGXS"
                },
                {
                    "packagePatterns": [
                        "^@types/eslint$",
                        "^@angular-eslint/.*",
                        "^@typescript-eslint/.*",
                        "^eslint.*"
                    ],
                    "groupName": "ESLint"
                },
                {
                    "packagePatterns": [
                        "^@types/jest$",
                        "^jest.*",
                        "^ts-jest$",
                        "^jest-preset-angular$"
                    ],
                    "groupName": "Jest"
                },
                {
                    "packagePatterns": [
                        "@types/karma.*",
                        "^karma.*"
                    ],
                    "groupName": "Karma"
                },
                {
                    "packagePatterns": [
                        "@types/jasmine",
                        "@types/jasmine*",
                        "^jasmine.*"
                    ],
                    "groupName": "Jasmine"
                },
                {
                    "packageNames": [
                        "^typescript$",
                        "^tslib$"
                    ],
                    "groupName": "TypeScript"
                }
            ]
        }
    }
}
