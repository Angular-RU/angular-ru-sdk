{
    "name": "@angular-ru/renovate-config",
    "version": "15.224.0",
    "description": "Shared Renovate config for Angular projects",
    "keywords": [
        "angular-ru",
        "angular",
        "sdk",
        "renovate",
        "renovate-config"
    ],
    "homepage": "https://github.com/Angular-RU/angular-ru-sdk/tree/master/packages/renovate-config#readme",
    "bugs": {
        "url": "https://github.com/Angular-RU/angular-ru-sdk/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Angular-RU/angular-ru-sdk.git"
    },
    "license": "MIT",
    "author": "angular-ru@yandex.ru",
    "publishConfig": {
        "access": "public"
    },
    "renovate-config": {
        "default": {
            "automerge": false,
            "pinVersions": true,
            "rangeStrategy": "bump",
            "timezone": "Europe/Moscow",
            "masterIssueApproval": true,
            "separateMajorMinor": true,
            "separateMinorPatch": true,
            "semanticCommits": true,
            "semanticPrefix": "build",
            "lockFileMaintenance": {
                "enabled": true
            },
            "baseBranches": [
                "master"
            ],
            "packageFiles": [
                "package.json",
                "packages/**/package.json"
            ],
            "packageRules": [
                {
                    "depTypeList": [
                        "peerDependencies"
                    ],
                    "enabled": false
                },
                {
                    "depTypeList": [
                        "dependencies"
                    ],
                    "groupName": "dependencies",
                    "groupSlug": "dependencies",
                    "commitMessagePrefix": "feat:",
                    "commitMessageAction": "update",
                    "commitBody": "only dependencies"
                },
                {
                    "depTypeList": [
                        "devDependencies"
                    ],
                    "groupName": "devDependencies",
                    "groupSlug": "devDependencies",
                    "commitMessagePrefix": "ci:",
                    "commitMessageAction": "update",
                    "commitBody": "only dev dependencies"
                },
                {
                    "packagePatterns": [
                        "^@angular/.*",
                        "^@angular-devkit/.*",
                        "^@schematics/.*"
                    ],
                    "groupName": "Angular"
                },
                {
                    "packagePatterns": [
                        "rxjs"
                    ],
                    "groupName": "RxJS"
                },
                {
                    "packagePatterns": [
                        "^@angular/fire$"
                    ],
                    "groupName": "Angular Firebase"
                },
                {
                    "packagePatterns": [
                        "^@angular-ru/*"
                    ],
                    "groupName": "Angular RU"
                },
                {
                    "packagePatterns": [
                        "^@angular/cdk$",
                        "^@angular/cli$",
                        "^@angular/cdk-experimental$",
                        "^@angular/flex-layout$",
                        "^@angular/material"
                    ],
                    "groupName": "Angular Material"
                },
                {
                    "packagePatterns": [
                        "^@angular-builders/*"
                    ],
                    "groupName": "Angular Builders"
                },
                {
                    "packagePatterns": [
                        "ng-packagr"
                    ],
                    "groupName": "ng-packagr"
                },
                {
                    "packagePatterns": [
                        "class-transformer"
                    ],
                    "groupName": "class-transformer"
                },
                {
                    "packagePatterns": [
                        "^@ngxs/*",
                        "^@ngxs-labs/*"
                    ],
                    "groupName": "NGXS"
                },
                {
                    "packagePatterns": [
                        "@types/eslint",
                        "^@angular-eslint/*",
                        "^@typescript-eslint/*",
                        "^eslint*"
                    ],
                    "groupName": "ESLint"
                },
                {
                    "packagePatterns": [
                        "@types/jest",
                        "^jest*",
                        "ts-jest",
                        "jest-preset-angular"
                    ],
                    "groupName": "Jest"
                },
                {
                    "packageNames": [
                        "typescript",
                        "tslib",
                        "^@types*"
                    ],
                    "groupName": "TypeScript"
                }
            ]
        }
    }
}
