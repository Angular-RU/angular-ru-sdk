{
    "root": "packages/ngxs/",
    "sourceRoot": "packages/ngxs/src",
    "projectType": "library",
    "targets": {
        "build": {
            "builder": "@angular-devkit/build-angular:ng-packagr",
            "options": {
                "tsConfig": "packages/ngxs/tsconfig.lib.json",
                "project": "packages/ngxs/ng-package.json"
            }
        },
        "version": {
            "executor": "@jscutlery/semver:version",
            "options": {
                "postTargets": ["ngxs:build"],
                "changelogHeader": "Angular-RU NGXS",
                "commitMessageFormat": "chore(${projectName}): release version ${version} [ci skip]",
                "versionTagPrefix": "@angular-ru/${target}@",
                "skipProjectChangelog": true,
                "skipRootChangelog": true,
                "trackDeps": true,
                "noVerify": true
            }
        }
    }
}
