{
    "packages": [
        "packages/*"
    ],
    "npmClient": "yarn",
    "useWorkspaces": true,
    "version": "12.21.0",
    "command": {
        "version": {
            "allowBranch": "master",
            "ignoreChanges": [
                "**/__fixtures__/**",
                "**/__tests__/**",
                "**/integration/**",
                "**/*.md"
            ]
        },
        "publish": {
            "yes": true,
            "npmClient": "npm",
            "force-publish": "*",
            "conventionalCommits": true,
            "message": "chore(release): publish %s [ci skip]",
            "registry": "https://registry.npmjs.org",
            "ignoreChanges": [
                "node_modules",
                "dist",
                "__tests__",
                "integration",
                "jest.config.js",
                "*.sh",
                "CHANGELOG.md"
            ]
        },
        "create": {
            "yes": true,
            "license": "MIT",
            "description": "Angular-RU package",
            "keywords": [
                "angular-ru",
                "angular",
                "sdk"
            ]
        }
    }
}
