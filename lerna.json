{
    "packages": [
        "packages/*"
    ],
    "npmClient": "yarn",
    "useWorkspaces": true,
    "version": "12.18.1",
    "command": {
        "version": {
            "allowBranch": "master"
        },
        "publish": {
            "yes": true,
            "npmClient": "npm",
            "conventionalCommits": true,
            "message": "chore(release): publish [ci skip]",
            "registry": "https://registry.npmjs.org",
            "ignoreChanges": ["node_modules", "dist", "src", "__tests__", "jest.config.js", "*.sh", "CHANGELOG.md"]
        },
        "create": {
            "yes": true,
            "license": "MIT",
            "description": "Angular-RU package",
            "keywords": ["angular-ru", "angular", "sdk"]
        }
    }
}
