{
    "name": "@angular-ru/sdk",
    "version": "0.0.0",
    "private": true,
    "description": "Angular-RU SDK",
    "homepage": "https://github.com/Angular-RU/angular-ru-sdk",
    "bugs": "https://github.com/Angular-RU/angular-ru-sdk/issues",
    "repository": "https://github.com/Angular-RU/angular-ru-sdk",
    "license": "MIT",
    "author": "angular-ru@yandex.ru",
    "workspaces": [
        "./libs/*"
    ],
    "scripts": {
        "clean": "nx clean .platform",
        "format": "nx format:prettier .platform",
        "graph": "nx dep-graph",
        "postinstall": "nx postinstall .platform",
        "lint": "nx format:eslint .platform"
    },
    "commitlint": {
        "extends": [
            "./.global/commitlint.config.js"
        ]
    },
    "lint-staged": {
        "*.ts": [
            "npx prettier --write",
            "npx eslint --fix --quiet --ignore-pattern '**/file-suites/**'"
        ],
        "*.{html,css,scss,md,js,json}": [
            "npx prettier --write"
        ]
    },
    "browserslist": [
        "Chrome >= 61",
        "Firefox >= 61",
        "not IE 11",
        "> 1%"
    ],
    "prettier": "./libs/prettier/prettier.config.js",
    "eslintConfig": {
        "extends": "./libs/eslint-config-enterprise/index.js"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "12.2.14",
        "@angular/animations": "12.2.14",
        "@angular/cdk": "12.2.13",
        "@angular/cli": "12.2.14",
        "@angular/common": "12.2.14",
        "@angular/compiler": "12.2.14",
        "@angular/compiler-cli": "12.2.14",
        "@angular/core": "12.2.14",
        "@angular/forms": "12.2.14",
        "@angular/language-service": "12.2.14",
        "@angular/material": "12.2.13",
        "@angular/platform-browser": "12.2.14",
        "@angular/platform-browser-dynamic": "12.2.14",
        "@angular/router": "12.2.14",
        "@ngx-translate/core": "14.0.0",
        "@ngx-translate/http-loader": "7.0.0",
        "@ngxs/logger-plugin": "3.7.3",
        "@ngxs/store": "3.7.3",
        "class-transformer": "0.5.1",
        "ngx-mask": "13.1.6",
        "ngx-toastr": "14.2.2",
        "pretty": "2.0.0",
        "rxjs": "7.5.5",
        "tsickle": "0.46.0",
        "tslib": "2.3.1",
        "typescript": "4.4.4",
        "zone.js": "0.11.4"
    },
    "engines": {
        "node": ">=16.12",
        "npm": ">=7.1",
        "yarn": "Please use npm instead of yarn to install dependencies"
    },
    "renovate": {
        "$schema": "https://docs.renovatebot.com/renovate-schema.json",
        "extends": [
            "@angular-ru/renovate"
        ],
        "schedule": [
            "on the 2nd and 4th day instance on sunday after 9pm"
        ]
    }
}
