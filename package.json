{
    "name": "@angular-ru/sdk",
    "version": "0.0.0",
    "private": true,
    "description": "Angular-RU SDK",
    "homepage": "https://github.com/Angular-RU/angular-ru-sdk#readme",
    "bugs": {
        "url": "https://github.com/Angular-RU/angular-ru-sdk/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Angular-RU/angular-ru-sdk.git"
    },
    "license": "MIT",
    "author": "splincode",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build:lib": "lerna run build:lib",
        "clean": "rm -rf ./packages/**/dist ./packages/**/.cache",
        "format": "npx sort-package-json && yarn pretty:format --write",
        "lint": "eslint \"**/*.ts\" --ignore-pattern typescript.bad.ts",
        "pre:commit": "git add . && git update-index --again && npx lint-staged && git add .",
        "pretty:format": "npx prettier \"**/*.{ts,html,css,scss,md,js,json}\"",
        "pretty:lint": "yarn pretty:format --check",
        "pretest": "lerna run pretest",
        "test": "lerna run test",
        "version": "yarn pre:commit"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn pre:commit"
        }
    },
    "devDependencies": {
        "@angular/compiler": "8.2.14",
        "@angular/core": "8.2.14",
        "@types/node": "14.0.13",
        "cpx": "1.5.0",
        "husky": "4.2.5",
        "lerna": "3.22.1",
        "lint-staged": "10.2.10",
        "npx": "10.2.2",
        "sort-package-json": "1.44.0",
        "ts-node": "8.10.2",
        "tslib": "1.12.0",
        "typescript": "3.9.5"
    }
}
