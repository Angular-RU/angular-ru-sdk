{
    "name": "@angular-ru/sdk",
    "version": "0.0.0",
    "private": true,
    "description": "Angular-RU SDK",
    "homepage": "https://github.com/Angular-RU/angular-ru-sdk",
    "bugs": "https://github.com/Angular-RU/angular-ru-sdk/issues",
    "repository": "https://github.com/Angular-RU/angular-ru-sdk",
    "license": "MIT",
    "author": "angular-ru@yandex.ru",
    "workspaces": [
        "./libs/*"
    ],
    "scripts": {
        "clean": "nx clean .platform",
        "format": "nx format:prettier .platform",
        "graph": "nx dep-graph",
        "postinstall": "npx husky install && npx ngcc --async",
        "lint": "nx format:eslint .platform"
    },
    "commitlint": {
        "extends": [
            "./.global/commitlint.config.js"
        ]
    },
    "lint-staged": {
        "*.ts": [
            "npx prettier --write",
            "npx eslint --fix --quiet --ignore-pattern '**/file-suites/**'"
        ],
        "*.{html,css,scss,md,js,json}": [
            "npx prettier --write"
        ]
    },
    "browserslist": [
        "Chrome >= 61",
        "Firefox >= 61",
        "not IE 11",
        "> 1%"
    ],
    "prettier": "./libs/prettier/prettier.config.js",
    "eslintConfig": {
        "extends": "./libs/eslint-config-enterprise/index.js"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "15.2.4",
        "@angular/animations": "15.2.5",
        "@angular/cdk": "15.2.5",
        "@angular/cli": "15.2.4",
        "@angular/common": "15.2.5",
        "@angular/compiler": "15.2.5",
        "@angular/compiler-cli": "15.2.5",
        "@angular/core": "15.2.5",
        "@angular/forms": "15.2.5",
        "@angular/language-service": "15.2.5",
        "@angular/material": "15.2.5",
        "@angular/platform-browser": "15.2.5",
        "@angular/platform-browser-dynamic": "15.2.5",
        "@angular/router": "15.2.5",
        "@ngx-translate/core": "14.0.0",
        "@ngx-translate/http-loader": "7.0.0",
        "@ngxs/logger-plugin": "3.7.3",
        "@ngxs/store": "3.7.3",
        "class-transformer": "0.5.1",
        "cpy-cli": "4.2.0",
        "lerna": "^6.5.1",
        "make-dir-cli": "3.0.0",
        "ngx-mask": "14.2.4",
        "ngx-toastr": "14.3.0",
        "pretty": "2.0.0",
        "rimraf": "4.1.3",
        "rxjs": "7.8.0",
        "tsickle": "0.46.3",
        "tslib": "2.4.1",
        "typescript": "4.6.4",
        "zone.js": "0.13.0"
    },
    "engines": {
        "node": ">=16.12",
        "npm": ">=7.1",
        "yarn": "Please use npm instead of yarn to install dependencies"
    }
}
