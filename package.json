{
    "name": "@angular-ru/sdk",
    "version": "0.0.0",
    "private": true,
    "description": "Angular-RU SDK",
    "homepage": "https://github.com/Angular-RU/angular-ru-sdk#readme",
    "bugs": {
        "url": "https://github.com/Angular-RU/angular-ru-sdk/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Angular-RU/angular-ru-sdk.git"
    },
    "license": "MIT",
    "author": "splincode",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build:app": "lerna run build:app",
        "build:lib": "lerna run build:lib",
        "clean": "rm -rf ./packages/**/dist ./packages/**/lib ./packages/**/.cache",
        "deploy": "lerna run deploy",
        "format": "yarn package:sort && yarn pretty:format --write",
        "lint": "eslint \"**/*.ts\" --ignore-pattern typescript.bad.ts",
        "package:sort": "npx sort-package-json \"package.json\" \"packages/*/package.json\"",
        "pre:commit": "git add . && git update-index --again && npx lint-staged && git add .",
        "pretty:format": "npx prettier \"**/*.{ts,html,css,scss,md,js,json}\"",
        "pretty:lint": "yarn pretty:format --check",
        "pretest": "lerna run pretest",
        "test": "lerna run test",
        "version": "yarn pre:commit"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn pre:commit"
        }
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "0.803.27",
        "@angular-devkit/build-ng-packagr": "0.803.27",
        "@angular/animations": "8.2.14",
        "@angular/cli": "8.3.21",
        "@angular/common": "8.2.14",
        "@angular/compiler": "8.2.14",
        "@angular/compiler-cli": "8.2.14",
        "@angular/core": "8.2.14",
        "@angular/forms": "8.2.14",
        "@angular/language-service": "8.2.14",
        "@angular/platform-browser": "8.2.14",
        "@angular/platform-browser-dynamic": "8.2.14",
        "@angular/router": "8.2.14",
        "@types/node": "14.0.13",
        "angular-cli-ghpages": "0.6.2",
        "cpx": "1.5.0",
        "husky": "4.2.5",
        "lerna": "3.22.1",
        "lint-staged": "10.2.10",
        "ng-packagr": "9.1.5",
        "npe": "1.1.3",
        "npx": "10.2.2",
        "rxjs": "6.5.5",
        "sort-package-json": "1.44.0",
        "ts-node": "8.10.2",
        "tsickle": "0.38.1",
        "tslib": "1.12.0",
        "typescript": "3.9.5",
        "zone.js": "0.10.3"
    }
}
