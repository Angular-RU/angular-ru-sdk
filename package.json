{
    "name": "@angular-ru/sdk",
    "version": "independent",
    "private": true,
    "description": "Angular-RU SDK",
    "homepage": "https://github.com/Angular-RU/angular-ru-sdk#readme",
    "bugs": "https://github.com/Angular-RU/angular-ru-sdk/issues",
    "repository": "git+https://github.com/Angular-RU/angular-ru-sdk.git",
    "license": "MIT",
    "author": "angular-ru@yandex.ru",
    "workspaces": [
        "packages/*",
        "dev-infra/*"
    ],
    "scripts": {
        "postinstall": "ngcc --async && husky install && yarn symlink",
        "clean": "yarn zx scripts/clean.ts",
        "build": "yarn zx scripts/build.ts",
        "symlink": "yarn zx scripts/symlink.ts",
        "integration": "yarn zx scripts/integration.ts",
        "lint": "yarn zx scripts/lint.ts",
        "format": "yarn zx scripts/format.ts",
        "test": "yarn zx scripts/test.ts",
        "version": "yarn zx scripts/release-version.ts",
        "release:bump": "RELEASE_VERSION=$(node -p -e \"require('./lerna.json').version\") && yarn npe version \"$RELEASE_VERSION\"",
        "version:legacy": "yarn release:bump && yarn generate-changelog && git add . && git update-index --again"
    },
    "commitlint": {
        "extends": [
            "./dev-infra/commitlint/index.js"
        ]
    },
    "lint-staged": {
        "*.ts": [
            "yarn prettier --write",
            "yarn eslint --fix --ignore-pattern **/file-suites/**"
        ],
        "*.{html,css,scss,md,js,json}": [
            "yarn prettier --write"
        ],
        "package.json": [
            "yarn prettier --write",
            "yarn sort-package-json"
        ]
    },
    "browserslist": [
        "Chrome >= 61",
        "Firefox >= 61",
        "not IE 11",
        "> 1%"
    ],
    "prettier": "./dev-infra/prettier/prettier.config.js",
    "eslintConfig": {
        "extends": "./dev-infra/eslint-config-enterprise/index.js"
    },
    "resolutions": {
        "@types/node": "15.14.9"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "12.2.2",
        "@angular/animations": "12.2.3",
        "@angular/cdk": "12.2.2",
        "@angular/cli": "12.2.2",
        "@angular/common": "12.2.3",
        "@angular/compiler": "12.2.3",
        "@angular/compiler-cli": "12.2.3",
        "@angular/core": "12.2.3",
        "@angular/forms": "12.2.3",
        "@angular/language-service": "12.2.3",
        "@angular/material": "12.2.2",
        "@angular/platform-browser": "12.2.3",
        "@angular/platform-browser-dynamic": "12.2.3",
        "@angular/router": "12.2.3",
        "@ngx-translate/core": "13.0.0",
        "@ngx-translate/http-loader": "6.0.0",
        "angular-cli-ghpages": "1.0.0-rc.2",
        "class-transformer": "0.4.0",
        "devtools-detect": "3.0.1",
        "jasmine-core": "3.9.0",
        "jasmine-spec-reporter": "7.0.0",
        "karma": "6.3.4",
        "karma-chrome-launcher": "3.1.0",
        "karma-coverage-istanbul-reporter": "3.0.3",
        "karma-jasmine": "4.0.1",
        "karma-jasmine-html-reporter": "1.7.0",
        "lerna": "4.0.0",
        "ngx-mask": "12.0.0",
        "ngx-toastr": "14.1.0",
        "pretty": "2.0.0",
        "rxjs": "6.6.7",
        "tsickle": "0.43.0",
        "tslib": "2.3.1",
        "typescript": "4.3.5",
        "zone.js": "0.11.4"
    },
    "packages": [
        "packages/common",
        "packages/ng-table-builder",
        "packages/stream",
        "packages/tooltip",
        "dev-infra/commitlint",
        "dev-infra/dev-dependencies",
        "dev-infra/eslint-plugin-enterprise",
        "dev-infra/eslint-config-enterprise",
        "dev-infra/jest",
        "dev-infra/prettier",
        "dev-infra/renovate",
        "dev-infra/typescript"
    ]
}
