{
    "extends": "@nrwl/workspace/presets/npm.json",
    "npmScope": "angular-ru",
    "affected": { "defaultBase": "origin/master" },
    "implicitDependencies": {
        "project.json": "*",
        "package.json": {
            "dependencies": "*",
            "devDependencies": "*"
        },
        ".eslintrc.js": "*",
        "nx.json": "*",
        "jest.*.js": "*",
        "karma.*.js": "*",
        "workspace.json": "*",
        "tsconfig.*.json": "*",
        "tsconfig.json": "*"
    },
    "tasksRunnerOptions": {
        "default": {
            "runner": "@nrwl/nx-cloud",
            "options": {
                "cacheableOperations": ["prebuild", "build", "symlink", "test", "version"]
            }
        }
    }
}
