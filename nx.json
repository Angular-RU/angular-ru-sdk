{
    "extends": "@nrwl/workspace/presets/npm.json",
    "npmScope": "angular-ru",
    "implicitDependencies": {
        "angular.json": "*",
        "package.json": {
            "dependencies": "*",
            "devDependencies": "*"
        },
        ".eslintrc.js": "*",
        "nx.json": "*",
        "karma.*.js": "*",
        "tsconfig.*.json": "*",
        "tsconfig.json": "*"
    },
    "tasksRunnerOptions": {
        "default": {
            "runner": "@nrwl/nx-cloud",
            "options": {
                "cacheableOperations": ["build", "test"]
            }
        }
    },
    "targetDependencies": {
        "version": [
            {
                "target": "version",
                "projects": "dependencies"
            }
        ]
    },
    "affected": {
        "defaultBase": "origin/master"
    }
}
