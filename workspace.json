{
    "version": 2,
    "projects": {
        "cdk-demo": "apps/cdk-demo",
        "excel-demo": "apps/excel-demo",
        "flex-layout-demo": "apps/flex-layout-demo",
        "http-demo": "apps/http-demo",
        "logger-demo": "apps/logger-demo",
        "tooltip-demo": "apps/tooltip-demo",
        "virtual-table-demo": "apps/virtual-table-demo",
        "ngxs-demo": "apps/ngxs-demo",
        "cdk": "libs/cdk",
        "commitlint": "libs/commitlint",
        "dev-dependencies": "libs/dev-dependencies",
        "eslint-config-enterprise": "libs/eslint-config-enterprise",
        "eslint-plugin-enterprise": "libs/eslint-plugin-enterprise",
        "jest": "libs/jest",
        "ngxs": "libs/ngxs",
        "prettier": "libs/prettier",
        "renovate": "libs/renovate",
        "typescript": "libs/typescript",
        ".platform": {
            "root": "./",
            "tags": ["scope:ignore"],
            "targets": {
                "postinstall": {
                    "executor": "@nrwl/workspace:run-commands",
                    "options": {
                        "parallel": false,
                        "commands": ["yarn husky install", "yarn ngcc --async", "yarn nx ln .platform"]
                    }
                },
                "changelog": {
                    "executor": "@nrwl/workspace:run-commands",
                    "options": {
                        "parallel": false,
                        "commands": [
                            "yarn standard-version",
                            "yarn prettier --write CHANGELOG.md",
                            "git add CHANGELOG.md",
                            "git commit --no-verify -m 'chore: updated CHANGELOG.md [ci skip]'"
                        ]
                    },
                    "outputs": ["./CHANGELOG.md"]
                },
                "clean": {
                    "executor": "@nrwl/workspace:run-commands",
                    "options": {
                        "parallel": true,
                        "commands": [
                            "rm -rf ./dist",
                            "rm -rf ./coverage",
                            "rm -rf ./@angular-ru/",
                            "rm -rf ./node_modules/.cache",
                            "rm -rf ./apps/**/dist ./apps/**/.cache",
                            "rm -rf ./libs/**/dist ./libs/**/.cache"
                        ]
                    }
                },
                "ln": {
                    "executor": "@nrwl/workspace:run-commands",
                    "options": { "command": "nx run-many --target=symlink --parallel=1 --all" }
                },
                "format:eslint": {
                    "executor": "@nrwl/workspace:run-commands",
                    "options": {
                        "command": "eslint . --fix --ignore-pattern '**/file-suites/**'"
                    }
                },
                "format:prettier": {
                    "executor": "@nrwl/workspace:run-commands",
                    "options": {
                        "command": "prettier '**/*.{ts,html,css,scss,md,js,json,yml}' --write"
                    }
                }
            }
        }
    }
}
