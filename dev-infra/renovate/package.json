{
    "name": "@angular-ru/renovate",
    "version": "12.11.0",
    "description": "Shared Renovate config for Angular projects",
    "homepage": "https://github.com/Angular-RU/angular-ru-sdk/tree/master/dev-infra/renovate#readme",
    "bugs": "https://github.com/Angular-RU/angular-ru-sdk/issues",
    "repository": "git+https://github.com/Angular-RU/angular-ru-sdk.git",
    "license": "MIT",
    "author": "angular-ru@yandex.ru",
    "publishConfig": {
        "access": "public"
    },
    "renovate-config": {
        "default": {
            "enabled": true,
            "automerge": true,
            "pinVersions": true,
            "rangeStrategy": "bump",
            "timezone": "Europe/Moscow",
            "masterIssueApproval": false,
            "separateMajorMinor": true,
            "separateMinorPatch": false,
            "semanticCommits": true,
            "dependencyDashboard": false,
            "dependencyDashboardApproval": false,
            "semanticPrefix": "build",
            "rebaseWhen": "behind-base-branch",
            "labels": [
                "renovate"
            ],
            "baseBranches": [
                "master"
            ],
            "packageFiles": [
                "./package.json",
                "./packages/package.json",
                "./dev-infra/package.json"
            ],
            "packageRules": [
                {
                    "matchUpdateTypes": [
                        "major"
                    ],
                    "automerge": false
                },
                {
                    "matchUpdateTypes": [
                        "minor",
                        "patch",
                        "pin",
                        "digest"
                    ],
                    "automerge": true
                },
                {
                    "depTypeList": [
                        "peerDependencies"
                    ],
                    "enabled": false
                },
                {
                    "packagePatterns": [
                        "^rxjs.*"
                    ],
                    "groupName": "RxJS"
                },
                {
                    "packagePatterns": [
                        "^prettier$"
                    ],
                    "groupName": "Prettier"
                },
                {
                    "packagePatterns": [
                        "^@angular/.*",
                        "^@angular-ru/.*",
                        "^@angular-devkit/.*",
                        "^@schematics/.*",
                        "^@angular/cdk$",
                        "^@angular/cli$",
                        "^@angular/cdk-experimental$",
                        "^@angular/flex-layout$",
                        "^@angular/material$",
                        "^@angular-builders/.*",
                        "^ng-packagr$",
                        "^zone.js"
                    ],
                    "groupName": "Angular",
                    "postUpgradeTasks": {
                        "commands": [
                            "ng update {{{depName}}} --from={{{fromVersion}}} --to={{{toVersion}}} --migrateOnly --allowDirty --force"
                        ],
                        "fileFilters": [
                            "**/**"
                        ]
                    }
                },
                {
                    "packagePatterns": [
                        "^class-transformer$"
                    ],
                    "groupName": "class-transformer"
                },
                {
                    "packagePatterns": [
                        "^@ngxs/.*",
                        "^@ngxs-labs/.*"
                    ],
                    "groupName": "NGXS"
                },
                {
                    "packagePatterns": [
                        "^@types/eslint$",
                        "^@angular-eslint/.*",
                        "^@angular-ru/eslint-.*",
                        "^@typescript-eslint/.*",
                        "^eslint.*"
                    ],
                    "groupName": "ESLint"
                },
                {
                    "packagePatterns": [
                        "^@types/jest$",
                        "^jest.*",
                        "^ts-jest$",
                        "^jest-preset-angular$"
                    ],
                    "groupName": "Jest"
                },
                {
                    "packagePatterns": [
                        "@types/karma.*",
                        "^karma.*"
                    ],
                    "groupName": "Karma"
                },
                {
                    "packagePatterns": [
                        "@types/jasmine",
                        "@types/jasmine*",
                        "^jasmine.*"
                    ],
                    "groupName": "Jasmine"
                },
                {
                    "packageNames": [
                        "^typescript$",
                        "^tslib$"
                    ],
                    "groupName": "TypeScript"
                }
            ]
        }
    }
}
