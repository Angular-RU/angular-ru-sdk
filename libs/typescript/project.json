{
    "root": "libs/typescript/",
    "sourceRoot": "libs/typescript/",
    "projectType": "library",
    "tags": ["scope:libs"],
    "targets": {
        "build": {
            "builder": "@nrwl/workspace:run-commands",
            "options": {
                "parallel": false,
                "commands": [
                    "mkdir -p ./@angular-ru/typescript",
                    "cp ./libs/typescript/tsconfig.json ./@angular-ru/typescript",
                    "cp ./libs/typescript/package.json ./@angular-ru/typescript",
                    "cp ./libs/typescript/README.md ./@angular-ru/typescript"
                ]
            },
            "dependsOn": [{ "target": "build", "projects": "dependencies" }]
        },
        "publish": {
            "builder": "@nrwl/workspace:run-commands",
            "options": {
                "command": "npm publish ./@angular-ru/typescript --ignore-scripts"
            }
        },
        "version": {
            "executor": "@jscutlery/semver:version",
            "options": {
                "postTargets": ["typescript:build", "typescript:publish"],
                "commitMessageFormat": "chore(${projectName}): release version ${version} [ci skip]",
                "versionTagPrefix": "@angular-ru/typescript-",
                "skipProjectChangelog": true,
                "noVerify": true
            },
            "dependsOn": [{ "target": "version", "projects": "dependencies" }]
        }
    }
}
