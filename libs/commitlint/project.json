{
    "root": "libs/commitlint/",
    "sourceRoot": "libs/commitlint/",
    "projectType": "library",
    "targets": {
        "build": {
            "builder": "@nrwl/workspace:run-commands",
            "options": {
                "parallel": false,
                "commands": [
                    "mkdir -p ./@angular-ru/commitlint",
                    "cp ./libs/commitlint/index.js ./@angular-ru/commitlint",
                    "cp ./libs/commitlint/package.json ./@angular-ru/commitlint",
                    "cp ./libs/commitlint/README.md ./@angular-ru/commitlint"
                ]
            },
            "dependsOn": [{ "target": "build", "projects": "dependencies" }]
        },
        "publish": {
            "builder": "@nrwl/workspace:run-commands",
            "options": {
                "command": "npm publish ./@angular-ru/commitlint --ignore-scripts"
            }
        },
        "version": {
            "executor": "@jscutlery/semver:version",
            "options": {
                "postTargets": ["commitlint:build", "commitlint:publish"],
                "commitMessageFormat": "chore(${projectName}): release version ${version} [ci skip]",
                "versionTagPrefix": "@angular-ru/${projectName}_",
                "skipProjectChangelog": true,
                "trackDeps": true,
                "noVerify": true
            },
            "dependsOn": [{ "target": "version", "projects": "dependencies" }]
        }
    }
}
