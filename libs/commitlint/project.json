{
    "root": "libs/commitlint/",
    "sourceRoot": "libs/commitlint/",
    "projectType": "library",
    "targets": {
        "build": {
            "builder": "@nrwl/workspace:run-commands",
            "options": {
                "parallel": false,
                "commands": [
                    "rm -rf  ./node_modules/@angular-ru/commitlint",
                    "mkdir -p ./node_modules/@angular-ru/commitlint",
                    "cp ./libs/commitlint/index.js ./node_modules/@angular-ru/commitlint",
                    "cp ./libs/commitlint/package.json ./node_modules/@angular-ru/commitlint",
                    "cp ./libs/commitlint/README.md ./node_modules/@angular-ru/commitlint"
                ]
            },
            "outputs": ["./node_modules/@angular-ru/commitlint"],
            "dependsOn": [{ "target": "build", "projects": "dependencies" }]
        },
        "publish": {
            "builder": "@nrwl/workspace:run-commands",
            "options": { "command": "npm publish ./node_modules/@angular-ru/commitlint --ignore-scripts" }
        },
        "version": {
            "executor": "@jscutlery/semver:version",
            "options": {
                "postTargets": ["commitlint:build", "commitlint:publish"],
                "commitMessageFormat": "chore(${projectName}): release version ${version} [ci skip]",
                "versionTagPrefix": "@angular-ru/commitlint-",
                "skipProjectChangelog": true,
                "baseBranch": "origin/master",
                "trackDeps": false,
                "noVerify": true
            },
            "dependsOn": [{ "target": "version", "projects": "dependencies" }]
        }
    }
}
