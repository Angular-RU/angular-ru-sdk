{
    "root": "libs/dev-dependencies/",
    "sourceRoot": "libs/dev-dependencies/",
    "projectType": "library",
    "tags": ["scope:libs"],
    "targets": {
        "build": {
            "builder": "@nrwl/workspace:run-commands",
            "options": {
                "parallel": false,
                "commands": [
                    "mkdir -p ./@angular-ru/dev-dependencies",
                    "cp ./libs/dev-dependencies/package.json ./@angular-ru/dev-dependencies",
                    "cp ./libs/dev-dependencies/README.md ./@angular-ru/dev-dependencies"
                ]
            },
            "outputs": ["./@angular-ru/dev-dependencies"],
            "dependsOn": [{ "target": "build", "projects": "dependencies" }]
        },
        "publish": {
            "builder": "@nrwl/workspace:run-commands",
            "options": { "command": "npm publish ./@angular-ru/dev-dependencies --ignore-scripts" }
        },
        "version": {
            "executor": "@jscutlery/semver:version",
            "options": {
                "postTargets": ["dev-dependencies:build", "dev-dependencies:publish"],
                "commitMessageFormat": "chore(${projectName}): release version ${version} [ci skip]",
                "versionTagPrefix": "@angular-ru/dev-dependencies-",
                "skipProjectChangelog": true,
                "baseBranch": "origin/master",
                "trackDeps": false,
                "noVerify": true
            },
            "dependsOn": [{ "target": "version", "projects": "dependencies" }]
        }
    }
}
