{
    "root": "libs/prettier/",
    "sourceRoot": "libs/prettier/",
    "projectType": "library",
    "targets": {
        "build": {
            "builder": "@nrwl/workspace:run-commands",
            "options": {
                "parallel": false,
                "commands": [
                    "mkdir -p ./node_modules/@angular-ru/prettier",
                    "cp ./libs/prettier/prettier.config.js ./node_modules/@angular-ru/prettier",
                    "cp ./libs/prettier/package.json ./node_modules/@angular-ru/prettier",
                    "cp ./libs/prettier/README.md ./node_modules/@angular-ru/prettier"
                ]
            },
            "outputs": ["./node_modules/@angular-ru/prettier"],
            "dependsOn": [{ "target": "build", "projects": "dependencies" }]
        },
        "publish": {
            "builder": "@nrwl/workspace:run-commands",
            "options": { "command": "npm publish ./node_modules/@angular-ru/prettier --ignore-scripts" }
        },
        "version": {
            "executor": "@jscutlery/semver:version",
            "options": {
                "postTargets": ["prettier:build", "prettier:publish"],
                "commitMessageFormat": "chore(${projectName}): release version ${version} [ci skip]",
                "versionTagPrefix": "@angular-ru/prettier-",
                "skipProjectChangelog": true,
                "baseBranch": "origin/master",
                "trackDeps": false,
                "noVerify": true
            },
            "dependsOn": [{ "target": "version", "projects": "dependencies" }]
        }
    }
}
