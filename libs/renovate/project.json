{
    "root": "libs/renovate/",
    "sourceRoot": "libs/renovate/",
    "projectType": "library",
    "tags": ["scope:shared"],
    "targets": {
        "build": {
            "builder": "@nrwl/workspace:run-commands",
            "options": {
                "parallel": false,
                "commands": [
                    "mkdir -p ./@angular-ru/renovate",
                    "cp ./libs/renovate/package.json ./@angular-ru/renovate",
                    "cp ./libs/renovate/README.md ./@angular-ru/renovate"
                ]
            },
            "dependsOn": [{ "target": "build", "projects": "dependencies" }]
        },
        "publish": {
            "builder": "@nrwl/workspace:run-commands",
            "options": {
                "command": "npm publish ./@angular-ru/renovate --ignore-scripts"
            }
        },
        "version": {
            "executor": "@jscutlery/semver:version",
            "options": {
                "postTargets": ["renovate:build", "renovate:publish"],
                "commitMessageFormat": "chore(${projectName}): release version ${version} [ci skip]",
                "versionTagPrefix": "@angular-ru/renovate-",
                "skipProjectChangelog": true,
                "trackDeps": true,
                "noVerify": true
            },
            "dependsOn": [{ "target": "version", "projects": "dependencies" }]
        }
    }
}
