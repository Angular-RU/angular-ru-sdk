{
    "root": "libs/renovate/",
    "sourceRoot": "libs/renovate/",
    "projectType": "library",
    "targets": {
        "build": {
            "builder": "@nrwl/workspace:run-commands",
            "options": {
                "parallel": false,
                "commands": [
                    "rm -rf  ./node_modules/@angular-ru/renovate",
                    "mkdir -p ./node_modules/@angular-ru/renovate",
                    "cp ./libs/renovate/package.json ./node_modules/@angular-ru/renovate",
                    "cp ./libs/renovate/README.md ./node_modules/@angular-ru/renovate"
                ]
            },
            "outputs": ["./node_modules/@angular-ru/renovate"],
            "dependsOn": [{ "target": "build", "projects": "dependencies" }]
        },
        "publish": {
            "builder": "@nrwl/workspace:run-commands",
            "options": { "command": "npm publish ./node_modules/@angular-ru/renovate --ignore-scripts" }
        },
        "version": {
            "executor": "@jscutlery/semver:version",
            "options": {
                "postTargets": ["renovate:build", "renovate:publish"],
                "commitMessageFormat": "chore(${projectName}): release version ${version} [ci skip]",
                "versionTagPrefix": "@angular-ru/renovate-",
                "skipProjectChangelog": true,
                "baseBranch": "origin/master",
                "trackDeps": false,
                "noVerify": true
            },
            "dependsOn": [{ "target": "version", "projects": "dependencies" }]
        }
    }
}
