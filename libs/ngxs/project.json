{
    "root": "libs/ngxs/",
    "sourceRoot": "libs/ngxs/",
    "projectType": "library",
    "targets": {
        "build": {
            "builder": "@angular-devkit/build-angular:ng-packagr",
            "options": {
                "tsConfig": "libs/ngxs/tsconfig.lib.json",
                "project": "libs/ngxs/ng-package.json"
            },
            "dependsOn": [
                {
                    "target": "build",
                    "projects": "dependencies"
                }
            ]
        },
        "publish": {
            "builder": "@nrwl/workspace:run-commands",
            "options": {
                "command": "npm publish ./@angular-ru/ngxs --ignore-scripts"
            }
        },
        "version": {
            "executor": "@jscutlery/semver:version",
            "options": {
                "postTargets": ["ngxs:build", "ngxs:publish"],
                "commitMessageFormat": "chore(${projectName}): release version ${version} [ci skip]",
                "versionTagPrefix": "@angular-ru/ngxs_",
                "skipProjectChangelog": true,
                "skipRootChangelog": true,
                "baseBranch": "master",
                "trackDeps": true,
                "noVerify": true
            },
            "dependsOn": [
                {
                    "target": "version",
                    "projects": "dependencies"
                }
            ]
        }
    }
}
