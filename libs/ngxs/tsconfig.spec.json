{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "baseUrl": "./",
        "types": ["jest", "node", "../@angular-ru/type-declarations"],
        "preserveConstEnums": true,
        "paths": {
            "@angular-ru/cdk/*": ["../cdk/*/src/public_api.ts"],
            "@angular-ru/ngxs": ["./src/public_api.ts"],
            "@angular-ru/ngxs/*": ["./*/src/public_api.ts"]
