{
    "root": "libs/eslint-plugin-enterprise/",
    "sourceRoot": "libs/eslint-plugin-enterprise/",
    "projectType": "library",
    "tags": ["scope:libs"],
    "targets": {
        "prebuild": {
            "builder": "@nrwl/workspace:run-commands",
            "options": {
                "parallel": false,
                "commands": [
                    "tsc -p ./libs/eslint-plugin-enterprise/tsconfig.json",
                    "cp ./libs/eslint-plugin-enterprise/package.json ./@angular-ru/eslint-plugin-enterprise",
                    "cp ./libs/eslint-plugin-enterprise/README.md ./@angular-ru/eslint-plugin-enterprise"
                ]
            },
            "outputs": ["./@angular-ru/eslint-plugin-enterprise"],
            "dependsOn": [{ "target": "build", "projects": "dependencies" }]
        },
        "symlink": {
            "builder": "@nrwl/workspace:run-commands",
            "options": {
                "parallel": false,
                "commands": [
                    "mkdir -p node_modules/@angular-ru/",
                    "cd node_modules/@angular-ru/ && rm -rf eslint-plugin-enterprise && ln -s -f ../../@angular-ru/eslint-plugin-enterprise eslint-plugin-enterprise"
                ]
            },
            "dependsOn": [{ "target": "prebuild", "projects": "self" }]
        },
        "build": {
            "builder": "@nrwl/workspace:run-commands",
            "options": {
                "parallel": false,
                "commands": ["nx prebuild eslint-plugin-enterprise", "nx symlink eslint-plugin-enterprise"]
            },
            "dependsOn": [{ "target": "build", "projects": "dependencies" }]
        },
        "publish": {
            "builder": "@nrwl/workspace:run-commands",
            "options": {
                "command": "npm publish ./@angular-ru/eslint-plugin-enterprise --ignore-scripts"
            }
        },
        "version": {
            "executor": "@jscutlery/semver:version",
            "options": {
                "postTargets": ["eslint-plugin-enterprise:build", "eslint-plugin-enterprise:publish"],
                "commitMessageFormat": "chore(${projectName}): release version ${version} [ci skip]",
                "versionTagPrefix": "@angular-ru/eslint-plugin-enterprise-",
                "skipProjectChangelog": true,
                "noVerify": true
            },
            "dependsOn": [{ "target": "version", "projects": "dependencies" }]
        }
    }
}
